@model IEnumerable<Urban.Models.Product>

@{
    ViewData["Title"] = "List of Product";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style= "max-width:540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                   @* @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }*@
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <img src="@item.ProductImage" width="100% "  height=30vh; alt="@item.ProductName">
                    </div>
                    <div class="col-md-12">
                        <div class="card- body">
                            <p class="card-text">@item.ProductDescrition</p>
                            <p class="card-text"><b>Product: </b>Pr</p>
                       
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white">
                                <i class="bi bi-cart-plus"></i> Add To Cart (Price @item.Productprice.ToString("c")</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
